{
  "manifest_version": 3,
  "name": "Intelligent Contextual Workspaces",
  "version": "1.0",
  "description": "Automatically classifies tabs and provides a hover-activated workspace panel.",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "tabGroups"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api-inference.huggingface.co/"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "chrome_url_overrides": {
    "newtab": "customHome.html"
  },
  "action": {
    "default_title": "Workspace Dashboard",
    "default_popup": "popup.html"
  },
  "icons":{
    "16": "extensionLogo.png",
    "48": "extensionLogo.png",
    "128": "extensionLogo.png"
  }
}